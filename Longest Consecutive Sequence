class Solution:
    def longestConsecutive(self, nums: List[int]) -> int:

        # If the input list is empty, no consecutive sequence exists
        if not nums:
            return 0

        longest_sequence = 0

        # Convert the list to a set to allow O(1) lookups
        num_set = set(nums)

        # Iterate through each number in the set
        for num in num_set:

            # Start counting only if the number is the beginning of a sequence
            if num - 1 not in num_set:
                current = num
                length = 1

                # Count consecutive numbers moving forward
                while current + 1 in num_set:
                    current += 1
                    length += 1

                # Update the longest sequence found
                longest_sequence = max(longest_sequence, length)

        return longest_sequence

        # Time complexity: O(n) - Each number is processed at most once when building sequences.

        # Space complexity: O(n) - A set is used to store all elements for fast lookup.

